{
  "version": 2,
  "name": "wepink",
  "public": true,
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "env": {
    "DATABASE_URL": {
      "description": "URL do banco de dados"
    },
    "JWT_SECRET": {
      "description": "Secret para JWT"
    },
    "NODE_ENV": {
      "description": "Ambiente (production/development)"
    }
  },
  "regions": ["iad1"],
  "functions": {
    "api/**": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
